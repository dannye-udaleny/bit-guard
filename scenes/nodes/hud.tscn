code = "shader_type canvas_item;

uniform float scan_line_count : hint_range(0, 1080) = 50.0;
uniform bool lines = true;

vec2 uv_curve(vec2 uv)
{
	uv = (uv - 0.5) * 1.005;
	
	uv.x *= 1.0 + pow(abs(uv.y) / 2.3, 2.0);
	uv.y *= 1.0 + pow(abs(uv.x) / 2.3, 2.0);
	
	uv = (uv / 1.05) + 0.5;
	return uv;
}


void fragment()
{
	float PI = 3.141539;
	float r = texture(SCREEN_TEXTURE, uv_curve(SCREEN_UV) + vec2(SCREEN_PIXEL_SIZE.x*1.0), 0.0).r;
	float g = texture(SCREEN_TEXTURE, uv_curve(SCREEN_UV) + vec2(SCREEN_PIXEL_SIZE.x*0.0), 0.0).g;
	float b = texture(SCREEN_TEXTURE, uv_curve(SCREEN_UV) + vec2(SCREEN_PIXEL_SIZE.x*-1.0), 0.0).b;
	
	float s_x = sin(uv_curve(SCREEN_UV).y * scan_line_count * PI * 16.0);
	s_x = (s_x * 0.5 + 0.5) * 0.9 + 0.2;
	float s_y = sin(uv_curve(SCREEN_UV).x * scan_line_count * PI * 16.0);
	s_y = (s_y * 0.5 + 0.5) * 0.9 + 0.2;
	
	vec4 scan_line = vec4(vec3(pow(s_x, 0.25)), 1.0);

	if (lines == true)
		COLOR = vec4(r,g,b, 1.0) * scan_line;
	else
		COLOR = vec4(r,g,b, 1.0);
}"

